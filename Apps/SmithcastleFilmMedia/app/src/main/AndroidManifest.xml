<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/sc_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmithcastleFilmMedia"
        tools:targetApi="31" >
        <activity
            android:name=".microfilms.LadyEspiritistaMicroActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_lady_espiritista_micro"
            android:theme="@style/Theme.SmithcastleFilmMedia.Fullscreen" />
        <activity
            android:name=".shortfilm.three.SAMSADDiaryFilmActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_samsaddiary_film"
            android:theme="@style/Theme.SmithcastleFilmMedia.Fullscreen" />
        <activity
            android:name=".microfilms.FullscreenLadyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_ladycover_micro"
            android:parentActivityName=".parrilla.Estrenos"
            android:theme="@style/Theme.SmithcastleFilmMedia.Fullscreen" />
        <activity
            android:name=".parrilla.Estrenos"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="Estrenos"
            android:theme="@style/Theme.SmithcastleFilmMedia.Fullscreen" />
        <activity
            android:name=".shortfilm.three.FullscreenSamActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_fullscreen_sam"
            android:parentActivityName=".parrilla.Estrenos"
            android:theme="@style/Theme.SmithcastleFilmMedia.Fullscreen" />
        <activity
            android:name=".FullscreenMain"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/Theme.SmithcastleFilmMedia.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>