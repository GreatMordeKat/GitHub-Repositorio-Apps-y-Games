<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.BeMyZentinel.FullscreenContainer"
    tools:context=".MainFullScreenActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/full_screen_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/light_blue_600">

            <ListView
                android:id="@+id/chat_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/full_screen_button"
            style="@style/Widget.Theme.BeMyZentinel.ButtonBar.Fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/new_chat"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/light_blue_600"
                android:src="@mipmap/ic_send_msg"
                android:translationX="290dp"
                android:translationZ="1dp"/>

            <EditText
                android:id="@+id/send_message_text"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:maxLength="23"
                android:maxLines="20"
                android:singleLine="false"
                android:translationY="-10dp" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>